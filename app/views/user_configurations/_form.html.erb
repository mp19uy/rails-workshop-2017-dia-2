<%= form_with(model: user_configuration, local: true, method: :put) do |form| %>
  <% if user_configuration.errors.any? %>
    <div class="alert alert-danger">
      <strong>Error:</strong> <%= user_configuration.errors.full_messages.to_sentence %>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :developer_public_key %>
    <%= form.text_field :developer_public_key, id: :user_config_developer_public_key, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :member_token %>
    <%= form.text_field :member_token, id: :user_config_member_token, class: "form-control" %>
  </div>

  <%= form.submit 'Save', class: "btn btn-default" %>
  <%= link_to 'Back', boards_path %>
<% end %>
