<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <div class="page-header">
      <h1>New Board</h1>
    </div>
    <%= render 'form', board: @board %>
  </div>
</div>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <div class="page-header">
      <h3>... or import a board from Trello</h3>
    </div>

    <% unless @trello_importer_error %>
      <%= render 'import_form', board: @board, trello_boards: @trello_boards %>
    <% else %>
      If you want to import boards from Trello, please provide your account keys in your
      <%= link_to "Account Settings page", edit_user_configuration_path %>
    <% end %>
  </div>
</div>
